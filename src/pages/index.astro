---
// component script section
import Main from "../layouts/Main.astro";
import Cards from "../components/Cards.astro";
const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
---

<!-- component template -->
<Main title="Dylan Nolasco">
  <div class="profile">
    <img
      alt="Dylan Nolasco's Website"
      width="100px"
      height="100px"
      class="profile_picture"
      src={profilePicture}
    />
    <div class="profile_details">
      <h1>Dylan Nolasco</h1>
      <h2>FullStack developer at Blue Trail Software</h2>
      <p>
        Helping developers be excellent and success at building scalable
        products.
      </p>
    </div>
  </div>
  <Cards
    cards={[
      {
        title: "Here are my guiding philosophies for life",
        gradientFrom: "#818cf8",
        gradientTo: "#d8b4fe",
        to: "/philosophies",
      },
      {
        title: "A summary of my work history",
        gradientFrom: "#fde68a",
        gradientTo: "#fca5a5",
        to: "/work-summary",
      },
      {
        title: "What I do beyond technology",
        gradientFrom: "#6ee7b7",
        gradientTo: "#9333ea",
        to: "/beyond-tech",
      },
    ]}
  />
</Main>

<style>
  /* CSS as manual*/
  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem 0;
  }

  .profile_details {
    flex: 1 0 300px;
  }

  .profile_details > h1 {
    margin-top: 0;
  }

  .profile_picture {
    border-radius: 50%;
    margin: 0 2rem 1rem 0;
  }
</style>
